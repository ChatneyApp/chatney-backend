input RoleSettingsDTO {
  Base: Boolean!
}

type RoleSettings {
  Base: Boolean!
}

type Role {
  Id: UUID!
  Name: String!
  Permissions: [String!]
  Settings: RoleSettings!
}

input CreateRoleDTO {
	Name:    String!
	Permissions: [String!]!
	Settings: RoleSettingsDTO!
}

input EditRoleDTO {
  Id: UUID!
	Name:    String!
	Permissions: [String!]
	Settings: RoleSettingsDTO!
}

type Mutation {
  createRole(RoleData: CreateRoleDTO!): Role!
  editRole(RoleData: EditRoleDTO!): Role!
}